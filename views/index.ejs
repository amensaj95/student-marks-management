<!DOCTYPE html>
<html>
<body>
    <h2>Student Marks Management</h2>
    
    <form action="/add-marks" method="POST">
        <input type="text" name="student_name" placeholder="Name" required>
        <input type="text" name="subject" placeholder="Subject" required>
        <input type="number" name="score" placeholder="Marks" required>
        <button type="submit">Add Student</button>
    </form>

    <hr>

    <table border="1">
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Marks</th>
            <th>Grade</th>
            <th>Action</th>
        </tr>
        <% students.forEach(student => { %>
        <tr>
            <td><%= student.student_name %></td>
            <td><%= student.subject %></td>
            <td><%= student.score %></td>
            <td><strong><%= student.grade %></strong></td>
            <td>
                <a href="/delete/<%= student.id %>">Delete</a>
            </td>
        </tr>
        <% }) %>
    </table>
</body>
</html>